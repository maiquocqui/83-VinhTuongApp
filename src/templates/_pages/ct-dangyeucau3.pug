		img(src="img/breadcrumb/1.jpg", alt="")
.container
	.row.no-gutters
		.col-12.col-lg-2
			.post-step
				.step.finish
					figure
						.icon <i class="material-icons">chat</i>
						figcaption
							.number 01.
							.name Đăng yêu cầu
				.step.active
					figure
						.icon <i class="material-icons">list</i>
						figcaption
							.number 02.
							.name Thông tin liên hệ
				.step
					figure
						.icon <i class="material-icons">playlist_add_check</i>
						figcaption
							.number 03.
							.name Xác nhận thông tin
			.post-hotline
				a(href="tel:1800 1218") <i class="material-icons">phone</i> 1800 1218
		.col-12.col-lg-10
			.post-page
				.info-group
					h1.page-title Thông tin công trình
					table.info-table
