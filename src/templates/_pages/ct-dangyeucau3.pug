			.modal-body.download-app(style="background: url(img/downloadapp.jpg) center center no-repeat;background-size: cover")
				.module-title Hãy để chúng tôi có thể chăm sóc tốt hơn nhu cầu của bạn cùng trải nghiệm mới mẻ về Vĩnh Tường App tại đây.
				.img
					img(src="img/mobile.png", alt="")
				.download-link
					a(href="#!")
						img(src="img/dlink1.png", alt="")
					a(href="#!")
						img(src="img/dlink2.png", alt="")