//- #review-popup.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
	.modal-dialog.modal-review(role='document')
		.modal-content
			.modal-header
				h5.modal-title Hủy yêu cầu
				.close(data-dismiss='modal', aria-label='Close')
					i.material-icons close
			.modal-body.review-popup
				.worker
					figure
						.worker-img
							img(src="img/worker/1.png", alt="")
						figcaption
							.worker-name Đội thi công Vĩnh Tường 01
				.rating-star
					select#rating
						option(value='1') 1
						option(value='2') 2
						option(value='3') 3
						option(value='4') 4
						option(value='5' selected) 5
				.form-wrap
					.rating-form1
						.form-group
							.module-title Bạn Chưa hài lòng về điều gì
							ul
								li
									.radio
										input#radio1(type="radio", name="radio" checked)
										label(for="radio1") Thời gian thi công quá lâu
								li
									.radio
										input#radio2(type="radio", name="radio")
										label(for="radio2") Giá tiền cao hơn dự đoán
								li
									.radio
										input#radio3(type="radio", name="radio")
										label(for="radio3") Thái độ thi công chưa tốt
								li
									.radio
										input#radio5(type="radio", name="radio")
										label(for="radio5") Lý do khác
									input.form-control(type="text" placeholder="Vui lòng nêu lý do...")
