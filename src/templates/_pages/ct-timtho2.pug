section.search-worker
	.search-bg(style="background: url(img/breadcrumb/search.jpg) center center no-repeat;background-size: cover")
	.container
		.row
			.col-12.col-lg-2
			.col-12.col-lg-8
				.search-wrap
					.searchbox
						input(type="text" placeholder="Tìm thợ thi công...")
						button.searchbutton <i class="material-icons">search</i>
			.col-12.col-lg-2
				.btn-wrap
					a.btn-searchadvance(href="#!") Tìm kiếm nâng cao
.container
	.row.no-gutters
		.col-12.col-lg-2
			section.sidebar-feature
				ul.feature-list
					li.feature
						figure
							.feature-icon
								img(src="img/icons/f1.png", alt="")
							figcaption 2000 thợ thi công
								br
								|trên khắp cả nước
					li.feature
						figure
							.feature-icon
								img(src="img/icons/f2.png", alt="")
							figcaption 20 chuyên gia hỗ	
								br
								|trợ kỹ thuật
					li.feature
						figure
							.feature-icon
								img(src="img/icons/f3.png", alt="")
							figcaption Thông tin cá nhân
								br
								|được bảo mật
					li.feature
						figure
							.feature-icon
								img(src="img/icons/f4.png", alt="")
							figcaption App miễn phí
								br
								|dễ dàng sử dụng
		.col-12.col-lg-10
			section.searchworker-page
				.favorite-worker
					h1.page-title Tìm kiếm nâng cao
					.search-form
						.form-wrap
							.form-row
								.col-12.col-md-6.col-lg-4
									.form-group
										label Đánh giá
										.rating
											select#rating
												option(value='1') 1
												option(value='2') 2
												option(value='3' selected) 3
												option(value='4') 4
												option(value='5') 5
									.form-group
										label Số lượng công trình (trong 6 tháng gần nhất)
										select.form-control(name="")
											option(value="") 10 - 20
								.col-12.col-md-6.col-lg-4
									.form-group
										label Yêu cầu thẻ nghề
										ul.row
											li.col-12.col-sm-6
												.radio
													input#co(type="radio", name="radio")
													label(for="co") Có
											li.col-12.col-sm-6
												.radio
													input#khong(type="radio", name="radio")
													label(for="khong") Không
										.thenghe
											img(src="img/thenghe.png", alt="")
								.col-12.col-md-6.col-lg-4
									.form-group
										label Khu vực
										.row
											.col-12.col-md-6
												label Tỉnh/Thành
												select.form-control(name="")
													option TP.HCM
											.col-12.col-md-6
												label Quận/Huyện
												select.form-control(name="")
													option Quận 8
									.frm-btn
										input(type="submit", value="Tìm kiếm")
// Modal
//- #review-popup.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
	.modal-dialog.modal-review(role='document')
		.modal-content
			.modal-header
				h5.modal-title Hủy yêu cầu
				.close(data-dismiss='modal', aria-label='Close')
					i.material-icons close
			.modal-body.review-popup
				.worker
					figure
						.worker-img
							img(src="img/worker/1.png", alt="")
						figcaption
							.worker-name Đội thi công Vĩnh Tường 01
				.rating-star
					select#rating
						option(value='1') 1
						option(value='2') 2
						option(value='3') 3
						option(value='4') 4
						option(value='5' selected) 5
				.form-wrap
					.rating-form1
						.form-group
							.module-title Bạn Chưa hài lòng về điều gì
							ul
								li
									.radio
										input#radio1(type="radio", name="radio" checked)
										label(for="radio1") Thời gian thi công quá lâu
								li
									.radio
										input#radio2(type="radio", name="radio")
										label(for="radio2") Giá tiền cao hơn dự đoán
								li
									.radio
										input#radio3(type="radio", name="radio")
										label(for="radio3") Thái độ thi công chưa tốt
								li
									.radio
										input#radio5(type="radio", name="radio")
										label(for="radio5") Lý do khác
									input.form-control(type="text" placeholder="Vui lòng nêu lý do...")
					.rating-form2
						.form-group
							input.form-control(type="text" placeholder="Nhận xét của bạn...")
					.frm-btn
						//- label Bạn có chắc chắn hủy yêu cầu?
						input(type="submit", value="Gửi đánh giá")