.breadcrumb-wrap
	.breadcrumb-img
		img(src="img/breadcrumb/1.jpg", alt="")
.container
	.row.no-gutters
		.col-12.col-lg-2
			.post-step
				.step.finish
					figure
						.icon <i class="material-icons">chat</i>
						figcaption
							.number 01.
							.name Đăng yêu cầu
				.step.active
					figure
						.icon <i class="material-icons">list</i>
						figcaption
							.number 02.
							.name Thông tin liên hệ
				.step
					figure
						.icon <i class="material-icons">playlist_add_check</i>
						figcaption
							.number 03.
							.name Xác nhận thông tin
			.post-hotline
				a(href="tel:1800 1218") <i class="material-icons">phone</i> 1800 1218
		.col-12.col-lg-10
			.post-page
				.post-group
					h1.page-title Nhập thông tin công trình
					.post-form
						.form-wrap
							.form-row
								.form-group.date.col-12.col-md-5.col-lg-4
									label Thời gian dự kiến bắt đầu
									input.form-control.datepicker(type="text" value="28-12-2017")
								.form-group.place.col-12.col-md-7.col-lg-8
									label Địa điểm thi công
									input.form-control(type="text" placeholder="")
								.form-group.col-12.col-md-6.col-lg-3
									label Tỉnh/Thành
									select.form-control
										option(selected) TP.HCM
								.form-group.col-12.col-md-6.col-lg-3
									label Quận/Huyện
									select.form-control
										option(selected) Quận 8
								.form-group.col-12.col-lg-6
									label Lời nhắn/Ghi chú (vui lòng không nhập số điện thoại và địa chỉ)
									input.form-control(type="text")
						.form-notice Lưu ý: Địa chỉ, số điện thoại liên hệ sẽ được bảo mật cho đến khi bạn chấp nhận báo giá của thợ.
				.post-group
					h2.page-title Nhập thông tin liên hệ
					.post-contact
